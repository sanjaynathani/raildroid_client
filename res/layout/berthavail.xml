<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<View android:layout_width="1dp" android:layout_height="10dp">
	</View>
	
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/trainInfo" android:textAppearance="@android:style/TextAppearance.Large" />
		
		<View android:layout_width="1dp" android:layout_height="10dp">
	</View>

	<EditText android:layout_width="250dp" android:layout_height="wrap_content"
		android:id="@+id/journeyDate" android:hint="Travel Date"
		android:layout_gravity="center"></EditText>


	<Spinner android:id="@+id/quota" android:layout_width="250dp"
		android:layout_height="wrap_content" android:entries="@array/quota"
		android:layout_gravity="center" />

	<Button android:layout_width="wrap_content" android:text="Get latest availibility"
		android:layout_height="35dp" android:id="@+id/availBtn"
		android:layout_gravity="right" android:layout_marginRight="40dp"></Button>
		
		<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/quotaInfo" android:textAppearance="@android:style/TextAppearance.Medium" />
	
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/helpInfo" android:textAppearance="@android:style/TextAppearance.Small" 
		android:textStyle="italic"/>
		

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date1" android:textAppearance="@android:style/TextAppearance.Medium" />

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date2" android:textAppearance="@android:style/TextAppearance.Medium"/>
		

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date3" android:textAppearance="@android:style/TextAppearance.Medium"/>

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date4" android:textAppearance="@android:style/TextAppearance.Medium"/>

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date5" android:textAppearance="@android:style/TextAppearance.Medium"/>

	<View android:layout_width="1dp" android:layout_height="8dp">
	</View>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date6" android:textAppearance="@android:style/TextAppearance.Medium"/>

	

	<!-- <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/date7" android:textAppearance="@android:style/TextAppearance.Medium"/> -->

</LinearLayout>
