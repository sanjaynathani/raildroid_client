<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.glassera.railgadi.ando"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:icon="@drawable/trainicon" android:label="@string/app_name">
        <activity android:name=".activity.SearchTrainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".activity.TrainListActivity"
                  android:label="@string/app_name"
                  android:icon="@drawable/trainicon"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.RouteDetailActivity"
                  android:label="@string/app_name"
                  android:icon="@drawable/trainicon"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.BerthDetailActivity"
                  android:label="@string/app_name"
                  android:icon="@drawable/trainicon"
                  android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>